{
  "name": "js-lint",
  "version": "0.0.1",
  "description": "nodejs linter for js and configuration",
  "author": "Matt Jenks <matt.jenks@griffingroupglobal.com",
  "license": "SEE LICENSE IN LICENSE.md",
  "scripts": {
    "lint": "eslint"
  },
  "devDependencies": {
    "eslint": "^5.0.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-no-unsafe-regex": "^1.0.0",
    "eslint-plugin-optimize-regex": "^1.1.5",
    "eslint-plugin-react": "^7.11.1"
  },
  "eslintConfig": {
    "extends": "airbnb",
    "plugins": [
      "no-unsafe-regex",
      "optimize-regex"
    ],
    "rules": {
      "no-unsafe-regex/no-unsafe-regex": 2,
      "optimize-regex/optimize-regex": "warn",
      "no-control-regex": "error",
      "no-console": "error",
      "no-warning-comments": "error",
      "react/destructuring-assignment": ["never", { "ignoreClassFields": false }],
      "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
    }
  }
}
